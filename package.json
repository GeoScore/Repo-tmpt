{
    "name": "Repo-tmpt",
    "version": "1.0.0",
    "description": "Simple repo which would be template for next projects :)",
    "repository": "https://github.com/GeoScore/Repo-tmpt",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@cap-js-community/odata-v2-adapter": "^1.12.10",
        "@sap/cds": "^7",
        "express": "^4"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1.7.1",
        "@jest/globals": "^29.7.0",
        "@jest/types": "^29.6.3",
        "@prettier/plugin-xml": "^3.4.1",
        "@sap/cds-lsp": "^7.9.0",
        "@sap/eslint-plugin-cds": "^3.0.3",
        "axios": "^1.7.2",
        "cds-swagger-ui-express": "^0.8.0",
        "chai": "^5.1.1",
        "chai-as-promised": "^8.0.0",
        "chai-subset": "^1.6.0",
        "dotenv": "^16.4.5",
        "eslint": "^9.4.0",
        "eslint-plugin-jsdoc": "^48.3.0",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.5",
        "prettier": "^3.3.1"
    },
    "scripts": {
        "start": "cds-serve",
        "test": "jest",
        "test-watch": "jest --watchAll",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
        "lint": "npx eslint .",
        "convert-cds-to-openapi": "cds compile srv --service all -o docs --to openapi --openapi:diagram",
        "prepare": "husky || true",
        "cds-lint": "cds lint"
    },
    "lint-staged": {
        "**/*.js": [
            "npx prettier --write",
            "npx eslint --fix"
        ],
        "**/*.{json,xml}": [
            "npx prettier --write"
        ],
        "**/*.cds": [
            "npx format-cds -f"
        ]
    }
}
